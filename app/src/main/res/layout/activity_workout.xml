<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="fenrirmma.hreysti_app.workout.createWorkoutActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/make_a_workout"
        android:textSize="30dp" />


    <TextView
        android:id="@+id/calander"
        android:layout_width="149dp"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:background="@android:drawable/dialog_holo_light_frame"
        android:backgroundTint="@android:color/black"
        android:text="Date"
        android:textColor="@android:color/white" />

    <TextView
        android:id="@+id/time"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:background="@android:drawable/dialog_holo_light_frame"
        android:backgroundTint="@android:color/black"
        android:text="Select time for the workout"
        android:textColor="@android:color/white" />

    <Spinner
        android:id="@+id/time_spinner"
        android:layout_width="match_parent"
        android:autofillHints="pick Time"
        android:layout_height="42dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="pick a coach"/>
    <TextView
        android:id="@+id/coach"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:background="@android:drawable/dialog_holo_light_frame"
        android:backgroundTint="@android:color/black"
        android:visibility="invisible"
        android:textColor="@android:color/white" />

    <Spinner
        android:id="@+id/coach_spinner"
        android:layout_width="match_parent"
        android:autofillHints="pick coach"
        android:layout_height="42dp" />



    <EditText
        android:id="@+id/workout"
        android:layout_width="351dp"
        android:layout_height="188dp"
        android:hint="Create the workout here..." />

    <Button
        android:id="@+id/submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="20dp"
        android:background="@android:drawable/dialog_holo_light_frame"
        android:backgroundTint="@android:color/black"
        android:onClick="submitWorkout"
        android:text="Submit"
        android:textColor="@android:color/white" />



</LinearLayout>
